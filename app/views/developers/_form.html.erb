<%= render 'shared/errors', obj: @developer  %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @developer do |f| %>
      <%= f.label :developername %>
      <%= f.text_field :developername %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.submit(@developer.new_record? ? 'Register' : 'Edit Profile', class: "btn btn-success") %>
    <% end %>
  </div>  
</div>
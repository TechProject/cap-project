<%= render 'shared/errors', obj: @program %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @program do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :summary %>
      <%= f.text_field :summary %>
      
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10 %>
      
      <%= f.submit(@program.new_record? ? 'Create Program' : 'Edit Program', class: "btn btn-success") %>
    <% end %>
  </div>  
</div>